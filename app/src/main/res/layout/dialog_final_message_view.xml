<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        app:cardCornerRadius="15dp"
        >



        <LinearLayout
            android:layout_marginTop="25dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="4"
            android:gravity="center">
            <cdflynn.android.library.checkview.CheckView
                android:id="@+id/check"
                android:layout_width="200dp"
                android:layout_height="200dp"
                app:checkView_strokeColor="@color/green"
                app:checkView_strokeWidth="15dp"/>

            <TextView
                android:id="@+id/text"
                android:layout_marginTop="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="شكرا لتعاونكم معنا , لقد تم إضافة الشكوى بالرقم"
                android:textSize="25dp"

                />

            <Button
                android:id="@+id/home_page"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                android:background="@drawable/custom_button_map"
                android:text="@string/title_home"/>
        </LinearLayout>


    </androidx.cardview.widget.CardView>
</RelativeLayout>