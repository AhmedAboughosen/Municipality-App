<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".viewModel.NoInternetFragment">

    <!-- TODO: Update blank fragment layout -->


    <ImageView
        android:id="@+id/nowifi"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:src="@drawable/ic_network_check_black_24dp" />

    <TextView
        android:id="@+id/check_internet"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_below="@id/nowifi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/no_internet"
        android:textSize="18sp"
        />

    <Button
        android:id="@+id/NoInternetButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/click_here_to_try"
        android:layout_below="@id/check_internet"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        style="?android:attr/borderlessButtonStyle"
        android:drawableLeft="@drawable/ic_refresh_black_24dp"
        />

</RelativeLayout>